@model IEnumerable<Review>

@{ ViewData["Title"] = "CakesReviews"; }

<h2>Reviews for the Cake: @ViewBag.CakeName</h2>

<h4>
    <a asp-controller="Cakes" asp-action="DisplayDetails"
       asp-route-id="@ViewBag.CakeId">Back to  @ViewBag.CakeName</a>
</h4>

<p>
    <a asp-action="CreateWithCake" asp-route-cakeId="@ViewBag.CakeId" class="btn btn-success">Create New Review</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Grade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cake.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.Email)
    </td>
    <td>

</tr>}
    </tbody>
</table>
